<div id="background">
  <div class="container text-center">
    <h1>Eat ALL of the Burgers!</h1>
    <img src="/assets/img/burger.png" width="200px">
  </div>

  <div class="container">
    <div class="row text-center">
      <div class="col-sm" id="ready">
        <h2>Burgers to Eat!</h2>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          <span class="label"></span> {{this.burger_name}}
          <button data-id="{{this.id}}" class="devour">Devour</button>
          <br>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-sm" id="eaten">
        <h2>Devoured Burgers!</h2>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          <span class="label"></span> {{this.burger_name}}</p>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="row" id="add-row">
      <div class="col-sm text-center">
        <h2>Add a Burger</h2>
        <div>
          <form class="create-form">
            <div class="form-group">
              <label for="burger">New Burger Name:</label>
              <input type="text" id="burger" name="name">
            </div>
            <button type="submit">Add Burger</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>